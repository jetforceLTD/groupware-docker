version: '2'
services:
  traefik:
    image: traefik:1.4.1
    restart: unless-stopped
    container_name: traefik
    command: --configFile=/etc/traefik/traefik.toml
    ports:
      - "8071:80"
      - "${GLOBAL_FRONTEND_PORT}:443"
    volumes:
      - ./traefik.toml:/etc/traefik/traefik.toml
      - ./certs:/certs
      - /var/run/docker.sock:/var/run/docker.sock
    networks:
      - default
networks:
  default:

