version: '2'
services:
  traefik:
    image: traefik:1.4.0
    restart: unless-stopped
    container_name: traefik
    command: --configFile=/etc/traefik/traefik.toml
    ports:
      - "80:80"
      #- "443:443"
    volumes:
      - ${GLOBAL_DIR_SERV}/traefik/service/traefik.toml:/etc/traefik/traefik.toml
      - ${GLOBAL_DIR_SERV}/traefik/service/certs:/certs
      - /var/run/docker.sock:/var/run/docker.sock
    networks:
      - default
networks:
  default:

